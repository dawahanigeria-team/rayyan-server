GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100